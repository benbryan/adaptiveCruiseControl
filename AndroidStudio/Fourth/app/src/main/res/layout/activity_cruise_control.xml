<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TableRow>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cruise control connected"
                android:checked="false"
                android:clickable="false"
                android:id="@+id/checkBoxCruiseControlConnected"
                android:layout_row="0"
                android:layout_weight="1"
                android:layout_column="0" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow me"
                android:checked="true"
                android:id="@+id/checkBoxFollowLocation"
                android:layout_row="0"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>
            <fragment
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/mapSigns"
                android:layout_weight="1"
                android:layout_column="0">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/tableLayoutGoogleMapOverlay">
                    <TableRow>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accel"
                        android:id="@+id/buttonGoogleMapOverlayAccelerate"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coast"
                        android:id="@+id/buttonGoogleMapOverlayCoast"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Res"
                        android:id="@+id/buttonGoogleMapOverlayResume"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Off"
                        android:id="@+id/buttonGoogleMapOverlayOff"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On"
                        android:id="@+id/buttonGoogleMapOverlayOn"/>
                    </TableRow>
                </TableLayout>
            </fragment>
        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current"
                android:inputType="number"
                android:ems="10"
                android:editable="false"
                android:id="@+id/editTextLabel"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_row="2"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:editable="false"
                android:id="@+id/editTextCurrentSpeed"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_row="2"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target"
                android:ems="10"
                android:editable="false"
                android:id="@+id/editTextLabel2"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:editable="false"
                android:id="@+id/editTextTargetSpeed"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_weight="1"/>
        </TableRow>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:id="@+id/buttonMPH_30"
                    android:layout_weight="1"
                    android:layout_column="0" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:id="@+id/buttonMPH_35"
                    android:layout_weight="1"
                    android:layout_column="3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:id="@+id/buttonMPH_40"
                    android:layout_weight="1"
                    android:layout_column="4" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:id="@+id/buttonMPH_45"
                    android:layout_weight="1"
                    android:layout_column="0" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:id="@+id/buttonMPH_50"
                    android:layout_weight="1"
                    android:layout_column="3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:id="@+id/buttonMPH_55"
                    android:layout_weight="1"
                    android:layout_column="4" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:id="@+id/buttonMPH_60"
                    android:layout_weight="1"
                    android:layout_column="0" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65"
                    android:id="@+id/buttonMPH_65"
                    android:layout_weight="1"
                    android:layout_column="3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:id="@+id/buttonMPH_70"
                    android:layout_weight="1"
                    android:layout_column="4" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:id="@+id/buttonMPH_75"
                    android:layout_weight="1"
                    android:layout_column="0" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:id="@+id/buttonMPH_80"
                    android:layout_weight="1"
                    android:layout_column="3" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:enabled="false"
                    android:id="@+id/buttonMPH_Delete"
                    android:layout_weight="1"
                    android:layout_column="4" />
            </TableRow>
        </TableLayout>
    </TableLayout>
</RelativeLayout>